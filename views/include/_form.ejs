<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Mark Stoenis">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="contact" class="text-light">Contact Number</label>
            <input type="text" name="number" value="" placeholder="">
        </div>
        <div class="form-group">
            <label for="location" class="text-light">Location</label>
            <input type="text" name="email" value="" placeholder="Mumbai,India">
        </div>
        <div class="form-group">
            <label for="education" class="text-light">Education</label>
            <input type="text" name="education" value="" placeholder="Bachelor's in XYZ">
        </div>
        <div class="form-group">
            <label for="experience" class="text-light">Work Experience</label>
            <input type="text" name="experience" value="" placeholder="Role/Work Done">
        </div>
        <div class="form-group">
            <label for="skills" class="text-light">Skills</label>
            <input type="text" name="skills" value="" placeholder="Technologies and Techinical Skills to be typed here">
        </div>
        <div class="form-group">
            <label for="language" class="text-light">Languages</label>
            <input type="text" name="langauge" value="" placeholder="Languages1,Language2">
        </div>
        <div class="form-group">
            <label for="achievements" class="text-light">Achievements and Certifications</label>
            <input type="text" name="email" value="" placeholder="Awards/Certifications">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" >
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

</form>